<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TASK</title>
  </head>
  <style>
    .header{ background-color: aqua; display: flex; justify-content: center;
    align-items: center; padding: 1rem; font-size: 1rem; } 
    h2 { display: flex;
    justify-content: center; align-items: center; color: rgb(26, 25, 25); } 
    .form-upper
    {  margin: 5px; padding: 5px;
    background-color: #0093E9;
    background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
 }
 .form-lower{
  padding: 5px;
  margin: 5px;
  background-color: #0093E9;
  background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
 }

  </style>
  <body>
    <div class="header">
      <h1>FOXAISR</h1>
    </div>

    <div class="form-upper">

      <h2>Upload your file here</h2>
      <br />
      <form action="/upload" enctype="multipart/form-data" method="post">
        <label for="myfile"></label>
        <input type="file" id="myfile" name="file" />
        <br /><br />
        <button class="button">Upload</button>
      </form>
    </div>
    <div class="form-lower">
      <h2>Train your Model.</h2>
      <form
        action="/train"
        enctype="multipart/form-data"
        method="post"
        id="file"
      >
        <button class="button">Train</button>
      </form>
    </div>

  </body>
</html>